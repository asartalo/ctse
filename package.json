{
  "name": "ctse",
  "version": "0.1.0",
  "description": "Continuous testing wrapper for Selenium",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-watch": "esw --color -w --clear",
    "install-selenium": "selenium-standalone install",
    "test-watch": "_mocha --watch './{,!(node_modules)/**}/*.test.js'",
    "test-watch-fast": "_mocha --watch --grep @slow --invert './{,!(node_modules)/**}/*.test.js'",
    "test-watch-unit": "_mocha --watch --grep @e2e --invert './{,!(node_modules)/**}/*.test.js'",
    "test-unit": "nyc _mocha --exit --grep @e2e --invert './{,!(node_modules)/**}/*.test.js'",
    "test-e2e": "nyc _mocha --exit --grep @e2e './{,!(node_modules)/**}/*.test.js'",
    "test-e2e-verbose": "CTSE_E2E_VERBOSE=yes npm run test e2e",
    "test": "nyc _mocha --exit './{,!(node_modules)/**}/*.test.js'",
    "check-uncommitted": "test -z \"$(git status --porcelain)\" || (>&2 echo \"You have uncommitted changes\" && exit 1)",
    "coveralls-report": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "continuous",
    "testing",
    "selenium",
    "end-to-end"
  ],
  "author": "Wayne Duran",
  "bin": {
    "ctse": "./cli.js"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run check-uncommitted && npm run test-unit"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@sprnz/wait": "^1.1.2",
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "node-ipc": "^9.1.1",
    "readline-stream": "^1.0.2",
    "selenium-standalone": "^6.17.0",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/dirty-chai": "^2.0.2",
    "@types/node-ipc": "^9.1.2",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chokidar": "^3.3.0",
    "coveralls": "^3.0.11",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-watch": "^6.0.1",
    "husky": "^4.2.5",
    "ip": "^1.1.5",
    "mocha": "^7.1.1",
    "nyc": "^14.1.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0"
  }
}
